		<script>
			async function transferData(carpetId) {
			try {
            // HTTP isteği yapmak için fetch API'sini kullandığınızı varsayalım
            const response = await fetch('/api/transferData', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ carpet_id: carpetId }), // carpet_id'yi istek gövdesinde gönderiyoruz
            });

            const result = await response.json();

            if (result.success) {
                console.log('Veri transferi başarılı:', result.data);
                // Başarı durumunu istemci tarafında işleyin (gerekiyorsa)
            } else {
                console.error('Veri transferi başarısız:', result.message);
                // Başarısızlık durumunu istemci tarafında işleyin (gerekiyorsa)
            }
        } catch (error) {
            console.error('Hata:', error);
        }
        // true döndürmek, formun gönderilmesine izin verir (gerekiyorsa)
        return true;
    }
		</script>
